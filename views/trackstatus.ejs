<% layout('layouts/boilerplate') -%>

<link rel="stylesheet" href="/css/trackstatus.css">

<div class="trackstatus-page">
  <div class="container">

    <!-- BACK -->
    <button class="back-btn" onclick="window.location.href='/track'">
      ‚Üê Back
    </button>

    <!-- HEADER CARD -->
    <div class="status-card">
      <div class="status-left">
        <h3>Grievance Tracking</h3>
        <div class="muted">Token: <b><%= token %></b></div>
        <div class="muted">Submitted on <%= submissionDate %></div>
      </div>

      <div class="status-right">
        <span class="priority-label <%= priority.toLowerCase() %>">
          <%= priority %> PRIORITY
        </span>
        <span class="status-badge <%= statusClass %>">
          <%= statusLabel %>
        </span>
      </div>
    </div>

    <!-- STEPPER -->
    <div class="stepper">
      <div class="step <%= step >= 1 ? 'active' : '' %>">
        <span></span>
        <p>Open</p>
      </div>

      <div class="step <%= step >= 2 ? 'active' : '' %>">
        <span></span>
        <p>Under Review</p>
      </div>

      <div class="step <%= step >= 3 ? 'active' : '' %>">
        <span></span>
        <p>Resolved</p>
      </div>

      <div class="step <%= step >= 3 ? 'active' : '' %>">
        <span></span>
        <p>Closed</p>
      </div>
    </div>

    <!-- GRID -->
    <div class="grid">

      <!-- DETAILS -->
      <div class="card">
        <h4>Grievance Details</h4>

        <div class="row">
          <span class="label">Department</span>
          <span class="value"><%= department %></span>
        </div>

        <div class="row">
          <span class="label">Current Status</span>
          <span class="value"><%= statusLabel %></span>
        </div>

        <div class="row">
          <span class="label">Last Updated</span>
          <span class="value"><%= lastUpdated %></span>
        </div>

        <h4 class="section-gap">Latest Remark</h4>
        <div class="remark">
          <%= remark || "No remarks available yet." %>
        </div>
      </div>

      <!-- TIMELINE -->
      <div class="card">
        <h4>Status Timeline</h4>
        <ul class="timeline">
          <% timeline.forEach(item => { %>
            <li><%= item %></li>
          <% }) %>
        </ul>
      </div>

    </div>
  </div>
</div>
