<% layout("layouts/boilerplate") %>

<!-- ================= FORGOT PASSWORD PAGE ================= -->
<div id="forgot-password-page" class="page-container active">
  <div class="auth-container">
    <div class="auth-card">
      <div class="auth-header">
        <div class="logo-circle">
          <i class="fas fa-unlock-alt"></i>
        </div>
        <h2>Reset Access</h2>
        <p>Airport Authority of India</p>
      </div>

      <div class="card-content">
        <div
          class="official-notice"
          style="
            background: #e3f2fd;
            border-left-color: var(--secondary-blue);
            color: var(--primary-blue);
          "
        >
          <i class="fas fa-info-circle me-2"></i>
          Kindly contact IT Department for password reset request.
        </div>

        <form id="forgotForm">
          <div class="mb-3">
            <label class="form-label">
              Registered Email <span class="required-asterisk">*</span>
            </label>
            <div class="input-group">
              <span class="input-group-text">
                <i class="fas fa-envelope"></i>
              </span>
              <input
                type="email"
                class="form-control"
                placeholder="name@aai.aero"
                required
              >
            </div>
          </div>

          <div class="mb-3">
            <label class="form-label">
              Employee ID <span class="required-asterisk">*</span>
            </label>
            <div class="input-group">
              <span class="input-group-text">
                <i class="fas fa-id-card"></i>
              </span>
              <input
                type="text"
                class="form-control"
                placeholder="Your EMP ID"
                required
              >
            </div>
          </div>

          <div class="mb-3">
            <label class="form-label">
              Security Verification <span class="required-asterisk">*</span>
            </label>
            <div class="captcha-wrapper">
              <div class="captcha-visual">
                <img
                  src="/auth/captcha"
                  alt="captcha"
                  class="captcha-display"
                  onclick="this.src='/auth/captcha?'+Date.now()"
                />
                <!-- <button
                  type="button"
                  class="refresh-btn"
                  onclick="generateForgotCaptcha()"
                >
                  <i class="fas fa-sync-alt"></i>
                </button> -->
              </div>
              <div class="input-group">
                <span class="input-group-text">
                  <i class="fas fa-shield-alt"></i>
                </span>
                <input
                  type="text"
                  class="form-control"
                  id="forgotCaptchaInput"
                  placeholder="Enter code"
                  required
                >
              </div>
            </div>
          </div>

          <button type="submit" class="btn btn-auth">
            Send Reset Link
          </button>
        </form>

        <div class="auth-footer">
          <p>
            <a href="/login">‚Üê Back to Login</a>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>


<script>
  console.log("üü¢ forgot-password JS loaded");

  document.addEventListener("DOMContentLoaded", () => {
    const form = document.getElementById("forgotForm");
    const submitBtn = form.querySelector("button[type='submit']");

    form.addEventListener("submit", async (e) => {
      e.preventDefault();
      console.log("üü° submit clicked");

      const email = document.querySelector('input[type="email"]').value;
      const employeeId = document.querySelector('input[placeholder="Your EMP ID"]').value;

      // Disable button to prevent double submit
      submitBtn.disabled = true;
      submitBtn.innerText = "Sending...";

      try {
        const res = await fetch("/auth/forgot-password", {
          method: "POST",
          headers: {
            "Content-Type": "application/json"
          },
          body: JSON.stringify({ email, employeeId })
        });

       const data = await res.json();
       console.log("üü¢ response:", data);
       
       if (res.ok) {
        alert("‚úÖ " + data.message);
        form.reset();
        // captcha refresh
        document.querySelector(".captcha-display").src ="/auth/captcha?" + Date.now();
      } else {
        alert("‚ö†Ô∏è " + data.message);
      }


      } catch (err) {
        console.error(err);
        alert("‚ö†Ô∏è Something went wrong. Try again.");
      } finally {
        submitBtn.disabled = false;
        submitBtn.innerText = "Send Reset Link";
      }
    });
  });
</script>
