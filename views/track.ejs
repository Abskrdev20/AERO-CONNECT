<% layout('layouts/boilerplate') -%>

<!-- Load Dashboard Specific CSS -->
<link rel="stylesheet" href="/css/tracking.css">

<div class="tracking-page">
  <div class="container">
    <div class="box">
      <a href="/" class="back-button">
      <svg viewBox="0 0 24 24">
        <path d="M19 12H5M12 19l-7-7 7-7"/>
      </svg>
      Back to Home
      </a>

      <div class="icon-wrapper">
        <svg viewBox="0 0 24 24">
          <path d="M9 11l3 3L22 4"></path>
          <path d="M21 12v7a2 2 0 01-2 2H5a2 2 0 01-2-2V5a2 2 0 012-2h11"></path>
        </svg>
      </div>
    
    <h3>Track Your Grievance</h3>
    <p class="subtitle">Enter your unique grievance token number below to check the current status and updates.</p>

    <form method="POST" action="/track/status">
      <div class="input-group">
        <label for="token">Grievance Token Number</label>
        <div class="input-wrapper">
          <svg viewBox="0 0 24 24">
            <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
            <path d="M7 11V7a5 5 0 0110 0v4"></path>
          </svg>
          <input 
            type="text" 
            id="token"
            name="token" 
            placeholder="e.g., AAI-GRV-2026-001234" 
            required
            pattern="AAI-GRV-\d{4}-\d{6}"
            title="Please enter a valid token number (AAI-GRV-YYYY-XXXXXX)">
        </div>
      </div>

      <button type="submit">Check Status</button>
    </form>

    <div class="info-box">
      <p><strong>Need Help?</strong> Your token number was provided when you submitted your grievance. Please check your registered email or SMS for the token number.</p>
    </div>
  </div>
</div>
</div>