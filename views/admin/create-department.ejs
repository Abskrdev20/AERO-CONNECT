<% layout('layouts/boilerplate') -%>
<link rel="stylesheet" href="/css/dashboard.css">
<link rel="stylesheet" href="/css/create-department.css">

<div class="dashboard-container">

  <aside class="sidebar">
    <div class="user-profile-widget">
      <div class="avatar-circle">A</div>
      <h5 class="user-name">Hey, Admin</h5>
      <p class="user-role">Administrator</p>
    </div>

    <nav class="side-nav">
      <a href="/admin/dashboard" class="nav-item">
        <i class="fas fa-th-large"></i> Overview
      </a>

      <a href="/admin/create-department" class="nav-item active">
        <i class="fas fa-building"></i> Create Department
      </a>

      <div class="nav-divider"></div>

      <a href="/logout" class="nav-item logout">
        <i class="fas fa-sign-out-alt"></i> Logout
      </a>
    </nav>
  </aside>

  <main class="main-content">

    <header class="content-header">
      <div>
        <h1>Account Management</h1>
        <p class="text-muted">
          Add a new Department or a Super Admin to the system.
        </p>
      </div>
    </header>

    <% if (typeof adminMessage !== "undefined") { %>
      <div class="alert alert-success mb-3">
        <%= adminMessage %>
      </div>
    <% } %>

    <div class="department-form-wrapper">
      <form class="department-card" method="POST" action="/admin/create-department">

        <div class="form-group">
          <label>Department/Admin Name</label>
          <input type="text" name="name" placeholder="e.g. Information Technology" required>
        </div>

        <div class="form-group">
          <label>Official Email</label>
          <input type="email" name="email" placeholder="department@aai.aero" required>
        </div>

        <div class="form-group">
          <label>Password</label>
          <input type="password" name="password" placeholder="Create secure password" required>
        </div>

        <div class="form-group">
          <label>Account Role</label>
          <select name="role" class="form-control" style="width: 100%; padding: 12px; border-radius: 8px; border: 1px solid #ddd; background-color: #f9f9f9;" required>
            <option value="DEPARTMENT">Department Admin (Normal)</option>
            <option value="SUPERADMIN">Super Admin (Full Dashboard Access)</option>
          </select>
          <small class="text-muted">Super Admins can see analytics of all departments.</small>
        </div>

        <button type="submit" class="btn-create">
          <i class="fas fa-plus-circle me-2"></i>
          Create Account
        </button>

      </form>
    </div>

  </main>
</div>