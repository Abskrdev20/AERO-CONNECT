<% layout('layouts/boilerplate') -%>

<link rel="stylesheet" href="/css/dashboard.css">

<div class="dashboard-container">

  <!-- SIDEBAR -->
  <aside class="sidebar">
    <div class="user-profile-widget">
      <div class="avatar-circle">A</div>
    <h5 class="user-name">
      Hey, <%= department.name %> Admin
    </h5>
    <p class="user-role">Department Administrator</p>

    </div>

    <nav class="side-nav">
      <a href="/admin/dashboard" class="nav-item active">
        <i class="fas fa-th-large"></i> Overview
      </a>

      <a href="/admin/create-department" class="nav-item">
        <i class="fas fa-building"></i> Create Department
      </a>

      <div class="nav-divider"></div>

      <a href="/logout" class="nav-item logout">
        <i class="fas fa-sign-out-alt"></i> Logout
      </a>
    </nav>
  </aside>

  <!-- MAIN CONTENT -->
  <main class="main-content">

    <!-- HEADER -->
    <header class="content-header">
      <div>
        <h1>Admin Dashboard</h1>
        <p class="text-muted">
          Manage departments and monitor grievance flow.
        </p>
      </div>
    </header>

    <!-- STATS -->
      <div class="stats-grid">

        <!-- DEPARTMENT -->
        <div class="stat-box blue">
          <div class="stat-icon">
            <i class="fas fa-building"></i>
          </div>
          <div class="stat-info">
            <h3>1</h3>
            <p>Department</p>
          </div>
        </div>

        <!-- TOTAL GRIEVANCES (DEPARTMENT-SPECIFIC) -->
        <div class="stat-box orange">
          <div class="stat-icon">
            <i class="fas fa-file-alt"></i>
          </div>
          <div class="stat-info">
            <h3><%= stats.total %></h3>
            <p>Total Grievances</p>
          </div>
        </div>

        <!-- RESOLVED GRIEVANCES (DEPARTMENT-SPECIFIC) -->
        <div class="stat-box green">
          <div class="stat-icon">
            <i class="fas fa-check-circle"></i>
          </div>
          <div class="stat-info">
            <h3><%= stats.resolved %></h3>
            <p>Resolved</p>
          </div>
        </div>

      </div>


    <!-- TABLE -->
    <div class="recent-activity-section">
      <h4 class="section-title">
        <i class="fas fa-history me-2"></i>Recent Grievances
      </h4>

      <div class="table-container">
        <table class="custom-table">
          <thead>
            <tr>
              <th>Grievance ID</th>
              <th>Department</th>
              <th>Date</th>
              <th>Status</th>
              <th>Action</th>
            </tr>
          </thead>


          <tbody>
            <% if (grievances.length === 0) { %>
              <tr>
                <td colspan="5" class="text-center text-muted">
                  No grievances for <%= department.name %> department
                </td>
              </tr>
            <% } %>

            <% grievances.forEach(grv => { %>
              <tr>
                <td class="fw-bold"><%= grv.grievanceId %></td>
                <td><%= grv.category %></td>
                <td>
                  <%= new Date(grv.createdAt).toLocaleDateString("en-IN") %>
                </td>
                <td>
                  <span class="status-badge <%= grv.status.toLowerCase() %>">
                    <%= grv.status.replace("_", " ") %>
                  </span>
                </td>
                <td>
                  <a href="/admin/grievances/<%= grv.grievanceId %>" class="btn btn-sm btn-primary">
                    Take Action
                  </a>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>

  </main>
</div>
