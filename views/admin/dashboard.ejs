<% layout('layouts/boilerplate') -%>
  <!-- NORMAL CSS IN HEAD -->
  <style>
    body.page-bg {
      background: #f3f4f6;
      font-family: Arial, sans-serif;
      margin: 0;
    }

    /* Top card */
    .top-card {
      margin: 20px;
      padding: 24px;
      border-radius: 20px;
      background: linear-gradient(to right, #2563eb, #4f46e5);
      color: white;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    /* Main container */
    .main-container {
      padding: 40px;
    }

    /* Summary cards */
    .summary-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 20px;
      margin-bottom: 40px;
    }

    .summary-card {
      background: white;
      border-radius: 20px;
      padding: 20px;
      border: 1px solid #e5e7eb;
    }

    .summary-card h2 {
      margin: 0;
      font-size: 26px;
    }

    .summary-card p {
      color: #6b7280;
      font-size: 14px;
    }

    /* Buttons */
    .primary-btn {
      background: #2563eb;
      color: white;
      border: none;
      padding: 10px 18px;
      border-radius: 8px;
      cursor: pointer;
    }

    .primary-btn:hover {
      background: #1d4ed8;
    }

    .primary-btn.small {
      font-size: 14px;
      padding: 8px 14px;
    }

    .action-buttons {
      display: flex;
      justify-content: center;
      gap: 16px;
      margin-bottom: 50px;
    }

    /* Cards */
    .card {
      background: white;
      padding: 24px;
      border-radius: 20px;
      border: 1px solid #e5e7eb;
      margin-bottom: 40px;
    }

    .section-title {
      margin-bottom: 16px;
    }

    /* Issues */
    .issue-card {
      display: flex;
      justify-content: space-between;
      align-items: center;
      border: 1px solid #e5e7eb;
      border-radius: 16px;
      padding: 16px;
    }

    .issue-title {
      font-weight: bold;
    }

    .issue-id {
      font-size: 13px;
      color: #6b7280;
    }

    .issue-actions {
      display: flex;
      gap: 12px;
      align-items: center;
    }

    select {
      padding: 6px 10px;
      border-radius: 6px;
      border: 1px solid #d1d5db;
    }

    /* Table */
    table {
      width: 100%;
      border-collapse: collapse;
    }

    th, td {
      padding: 12px;
      text-align: left;
    }

    thead {
      background: #f9fafb;
    }

    /* Badges */
    .badge {
      padding: 4px 10px;
      border-radius: 20px;
      font-size: 12px;
    }

    .badge.high {
      background: #fee2e2;
      color: #dc2626;
    }

    .badge.progress {
      background: #fef3c7;
      color: #b45309;
    }

    /* Utilities */
    .hidden {
      display: none;
    }

    .link-btn {
      background: none;
      border: none;
      color: #2563eb;
      cursor: pointer;
    }
  </style>

  <!-- Lucide Icons -->
  <script src="https://unpkg.com/lucide@latest"></script>
</head>





<div class="top-card">
  <div>
    <h2>Hey, Admin ðŸ‘‹</h2>
    <p>Overview of issues raised across departments</p>
  </div>

  
</div>

<main class="main-container">

  <!-- SUMMARY CARDS -->
  <div class="summary-grid">

    <div class="summary-card">
      <h2>105</h2>
      <p>Total Grievances</p>
    </div>

    <div class="summary-card">
      <h2>12</h2>
      <p>Pending</p>
    </div>

    <div class="summary-card">
      <h2>41</h2>
      <p>In Progress</p>
    </div>

    <div class="summary-card">
      <h2>31</h2>
      <p>Resolved</p>
    </div>

  </div>

  <!-- ACTION BUTTONS -->
  <div class="action-buttons">

    <button onclick="toggleAssigned()" class="primary-btn small">
      <i data-lucide="list"></i>
      View All Assigned Issues
    </button>

    <button class="primary-btn small">
      <i data-lucide="layers"></i>
      Departments
    </button>

    <button class="primary-btn small">
      <i data-lucide="users"></i>
      Users
    </button>

    <button class="primary-btn small">
      <i data-lucide="settings"></i>
      SLA Settings
    </button>

  </div>

  <!-- NEW ISSUES -->
  <div class="card">
    <h2 class="section-title">New Issues</h2>

    <div class="issue-card">
      <div>
        <p class="issue-title">Network Issue in Terminal 2</p>
        <p class="issue-id">Issue ID: #201</p>
      </div>

      <div class="issue-actions">
        <button class="link-btn">
          <i data-lucide="eye"></i> View
        </button>

        <select>
          <option>Select Department</option>
          <option>IT</option>
          <option>Admin</option>
          <option>Finance</option>
        </select>

        <select>
          <option>Set Priority</option>
          <option>High</option>
          <option>Medium</option>
          <option>Low</option>
        </select>

        <button class="primary-btn small">Submit</button>
      </div>
    </div>

  </div>

  <!-- ASSIGNED ISSUES -->
  <div id="assignedSection" class="card hidden">
    <h2 class="section-title">Assigned Issues</h2>

    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>Title</th>
          <th>Department</th>
          <th>Priority</th>
          <th>Status</th>
        </tr>
      </thead>

      <tbody>
        <tr>
          <td>#201</td>
          <td>Network Issue in Terminal 2</td>
          <td>IT</td>
          <td><span class="badge high">High</span></td>
          <td><span class="badge progress">In Progress</span></td>
        </tr>
      </tbody>
    </table>
  </div>

</main>


<script>
  lucide.createIcons();
  function toggleAssigned() {
    document.getElementById("assignedSection").classList.toggle("hidden");
  }
</script>



