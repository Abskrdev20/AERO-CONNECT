
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Admin Dashboard</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <!-- Lucide Icons -->
  <script src="https://unpkg.com/lucide@latest"></script>
</head>
<body class="bg-gray-100">

<%- include('../partials/navbar') %>
<div class="bg-gradient-to-r from-blue-600 to-indigo-600 rounded-2xl p-6 mb-8 flex items-center justify-between shadow-sm">
  <div>
    <h2 class="text-white text-xl font-semibold">
      Hey, Admin ðŸ‘‹
    </h2>
    <p class="text-blue-100 text-sm">
      Overview of issues raised across departments
    </p>
  </div>

  <button class="bg-white text-blue-600 text-sm font-medium px-4 py-2 rounded-full shadow hover:bg-gray-100 transition">
    + New Action
  </button>
</div>

<main class="px-10 py-10">

  <!-- SUMMARY CARDS -->
  <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">

   <div class="bg-white rounded-2xl p-5 border shadow-sm hover:shadow-md transition">
      <h2 class="text-2xl font-bold text-gray-800">105</h2>
      <br>
      <p class="text-gray-500 text-sm">Total Grievances</p>
    </div>

    <div class="bg-white rounded-2xl p-5 border shadow-sm hover:shadow-md transition">
      <h2 class="text-2xl font-bold text-gray-800">12</h2>
      <br>
      <p class="text-gray-500 text-sm">Pending</p>
    </div>

    <div class="bg-white rounded-2xl p-5 border shadow-sm hover:shadow-md transition">
      <h2 class="text-2xl font-bold text-gray-800">41</h2>
      <br>
      <p class="text-gray-500 text-sm">In Progress</p>
    </div>

    <div class="bg-white rounded-2xl p-5 border shadow-sm hover:shadow-md transition">
      <h2 class="text-2xl font-bold text-gray-800">31</h2>
      <br>
      <p class="text-gray-500 text-sm">Resolved</p>
    </div>
  </div>

  <!-- CENTER ACTION BUTTONS -->
  <div class="flex justify-center gap-4 mb-14">

    <div class="flex justify-end">
    <button
      onclick="toggleAssigned()"
      class="flex items-center gap-2 px-4 py-2 text-sm font-medium
             bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition"
    >
      <i data-lucide="list"></i>
      View All Assigned Issues
    </button>
  </div>

    <button class="flex items-center gap-2 px-5 py-2 text-sm
                   bg-blue-600 text-white rounded-md
                   hover:bg-blue-700 transition">
      <i data-lucide="layers" class="w-5 h-5"></i>
      Departments
    </button>

    <button class="flex items-center gap-2 px-5 py-2 text-sm
                   bg-blue-600 text-white rounded-md
                   hover:bg-blue-700 transition">
      <i data-lucide="users" class="w-5 h-5"></i>
      Users
    </button>

    <button class="flex items-center gap-2 px-5 py-2 text-sm
                   bg-blue-600 text-white rounded-md
                   hover:bg-blue-700 transition">
      <i data-lucide="settings" class="w-5 h-5"></i>
      SLA Settings
    </button>

  </div>

  <!-- ===== NEW ISSUES ===== -->
  <div class="bg-white rounded-2xl border shadow-sm p-6">
    <h2 class="text-lg font-semibold text-gray-800 mb-4">New Issues</h2>

    <div class="space-y-4">

      <!-- ISSUE CARD -->
      <div class="border rounded-xl p-4 flex flex-col lg:flex-row gap-4 items-center justify-between">

        <div>
          <p class="font-medium text-gray-900">Network Issue in Terminal 2</p>
          <p class="text-sm text-gray-500">Issue ID: #201</p>
        </div>

        <div class="flex flex-wrap gap-3 items-center">
          <!-- VIEW -->
          <button class="text-blue-600 text-sm flex items-center gap-1">
            <i data-lucide="eye" class="w-4 h-4"></i>
            View
          </button>

          <!-- DEPARTMENT -->
          <select class="px-3 py-2 text-sm border rounded-lg">
            <option>Select Department</option>
            <option>IT</option>
            <option>Admin</option>
            <option>Finance</option>
          </select>

          <!-- PRIORITY -->
          <select class="px-3 py-2 text-sm border rounded-lg">
            <option>Set Priority</option>
            <option>High</option>
            <option>Medium</option>
            <option>Low</option>
          </select>

          <!-- SUBMIT -->
          <button
            class="px-4 py-2 text-sm bg-blue-600 text-white rounded-lg hover:bg-green-700">
            Submit
          </button>

        </div>
      </div>

      <!-- ISSUE CARD 2-->
      <div class="border rounded-xl p-4 flex flex-col lg:flex-row gap-4 items-center justify-between">

        <div>
          <p class="font-medium text-gray-900">ID Card Delay</p>
          <p class="text-sm text-gray-500">Issue ID: #202</p>
        </div>

        <div class="flex flex-wrap gap-3 items-center">
          <!-- VIEW -->
          <button class="text-blue-600 text-sm flex items-center gap-1">
            <i data-lucide="eye" class="w-4 h-4"></i>
            View
          </button>

          <!-- DEPARTMENT -->
          <select class="px-3 py-2 text-sm border rounded-lg">
            <option>Select Department</option>
            <option>IT</option>
            <option>Admin</option>
            <option>Finance</option>
          </select>

          <!-- PRIORITY -->
          <select class="px-3 py-2 text-sm border rounded-lg">
            <option>Set Priority</option>
            <option>High</option>
            <option>Medium</option>
            <option>Low</option>
          </select>

          <!-- SUBMIT -->
          <button
            class="px-4 py-2 text-sm bg-blue-600 text-white rounded-lg hover:bg-green-700">
            Submit
          </button>

        </div>
      </div>

      <!-- ISSUE CARD 3-->
      <div class="border rounded-xl p-4 flex flex-col lg:flex-row gap-4 items-center justify-between">

        <div>
          <p class="font-medium text-gray-900">Salary Issue</p>
          <p class="text-sm text-gray-500">Issue ID: #203</p>
        </div>

        <div class="flex flex-wrap gap-3 items-center">
          <!-- VIEW -->
          <button class="text-blue-600 text-sm flex items-center gap-1">
            <i data-lucide="eye" class="w-4 h-4"></i>
            View
          </button>

          <!-- DEPARTMENT -->
          <select class="px-3 py-2 text-sm border rounded-lg">
            <option>Select Department</option>
            <option>IT</option>
            <option>Admin</option>
            <option>Finance</option>
          </select>

          <!-- PRIORITY -->
          <select class="px-3 py-2 text-sm border rounded-lg">
            <option>Set Priority</option>
            <option>High</option>
            <option>Medium</option>
            <option>Low</option>
          </select>

          <!-- SUBMIT -->
          <button
            class="px-4 py-2 text-sm bg-blue-600 text-white rounded-lg hover:bg-green-700">
            Submit
          </button>

        </div>
      </div>
      <br>

    </div>
  </div>

  <!-- ===== ASSIGNED ISSUES (HIDDEN INITIALLY) ===== -->
  <div id="assignedSection" class="hidden bg-white rounded-2xl border shadow-sm p-6">

    <h2 class="text-lg font-semibold text-gray-800 mb-4">Assigned Issues</h2>

    <div class="overflow-x-auto">
      <table class="min-w-full text-sm text-left">

        <thead class="bg-gray-50 text-gray-600 uppercase text-xs">
          <tr>
            <th class="px-4 py-3">ID</th>
            <th class="px-4 py-3">Title</th>
            <th class="px-4 py-3">Department</th>
            <th class="px-4 py-3">Priority</th>
            <th class="px-4 py-3">Status</th>
          </tr>
        </thead>

        <tbody class="divide-y">

          <tr class="hover:bg-gray-50">
            <td class="px-4 py-3">#201</td>
            <td class="px-4 py-3">Network Issue in Terminal 2</td>
            <td class="px-4 py-3">IT</td>
            <td class="px-4 py-3">
              <span class="px-3 py-1 text-xs rounded-full bg-red-100 text-red-600">
                High
              </span>
            </td>
            <td class="px-4 py-3">
              <span class="px-3 py-1 text-xs rounded-full bg-yellow-100 text-yellow-700">
                In Progress
              </span>
            </td>
          </tr>

        </tbody>

      </table>
    </div>
  </div>

</div>


<%- include('../partials/footer') %>
<script>
  lucide.createIcons();

  function toggleAssigned() {
    document.getElementById("assignedSection").classList.toggle("hidden");
  }
</script>

</body>
</html>
